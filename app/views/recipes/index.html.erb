<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Recipes</h1>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Picture</th>
        <th>User_id</th>
        <th>Ingredients</th>
        <th>Description</th>
        <!-- <th>Serving</th> -->
        <th>Language</th>
        <!-- <th>Preptime</th> -->
        <!-- <th>Cooktime</th> -->
        <!-- <th>Likes</th> -->
        <th>Notes</th>
        <th>Comments</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @recipes.each do |recipe| %>
        <tr>
          <td><%= recipe.title %></td>
          <td><%= recipe.picture %></td>
          <td><%= recipe.user_id %></td>
          <td><%= truncate(recipe.ingredients, length: 15) { link_to "more", recipe }%></td>
          <td><%= truncate(recipe.description, length: 15) { link_to "more", recipe }%></td>
          <!-- <td><%= recipe.serving %></td> -->
          <td><%= recipe.language %></td>
          <!-- <td><%= recipe.preptime %></td> -->
          <!-- <td><%= recipe.cooktime %></td> -->
          <!-- <td><%= recipe.likes %></td> -->
          <td><%= recipe.notes %></td>
          <td><%= recipe.comments %></td>
          <td><%= link_to 'Show', recipe, class: "label label-success" %></td>
          <td><%= link_to 'Edit', edit_recipe_path(recipe), class: "label label-primary" %></td>
          <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?'}, class: "label label-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
  <br>

  <%= link_to 'New Recipe', new_recipe_path, class: "label label-success" %>
</div>
